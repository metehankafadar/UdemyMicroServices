@{
    ViewData["Title"] = "Index";
}
@model List<CourseViewModel>

<div class="row">
    <div class="col-md-12">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Kurslar</h5>

                <a asp-controller="Courses" asp-action="Create" class="btn btn-primary mb-3">Kurs oluştur</a> 
                @if (Model.Any())
                {
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Foto</th>
                                <th>Kurs isim</th>
                                <th>Fiyat</th>
                                <th>Süre</th>
                                <th>Açıklama</th>
                                <th>İşlemler</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                   <td> <img style="width:72px;height:60px;" class="img-thumbnail" src="@item.StockPictureUrl" /></td> 
                                    <td>@item.Name</td>
                                    <td>@item.Price</td>
                                    <td>@item.Feature.Duration</td>
                                    <td>@item.Description</td>
                                    <td><a asp-controller="Courses" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-success btn-sm" >Güncelle</a>
                                    <a class="btn btn-danger btn-sm" asp-controller="Courses" asp-action="Delete" asp-route-Id="@item.Id">Sil</a></td>
                                 
                                   
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">
                        Kayıtlı kurs bulunamadı
                    </div>
                }
            </div>
        </div>
    </div>
</div>